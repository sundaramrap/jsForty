//create a form element
const form = document.createElement("form");

//creating a label tag
const label1 = document.createElement("label");
label1.innerText = "Select Your Specifications";
form.appendChild(label1);
form.appendChild(document.createElement("br"));
form.appendChild(document.createElement("br"));

//shared radio group name
const radioName = "userSpec";

//Helper function for radio+label

function createRadio(id, value, text) {
  const radio = document.createElement("input");
  radio.type = "radio";
  radio.id = id;
  radio.value = value;
  radio.onclick = function () {
    createInput = id;
  };
  const label = document.createElement("label");
  label.setAttribute("for", id);
  label.innerHTML = text;
  form.appendChild(label);
  form.appendChild(radio);
  form.appendChild(document.createElement("br"));
}

//creating radio for name,email,contact,city

createRadio("uName", "name", "Name");
createRadio("uemail", "email", "Email");
createRadio("uContact", "contact", "Contact");
createRadio("uCity", "city", "City");

//helper function for input box

function createInput(id, value, text) {
  const input = document.createElement("input");
  input.id = id;
  input.placeholder = text;
  const label1 = document.createElement("label");
  label1.setAttribute("for", id);
  label1.textContent = value;
  form.appendChild(label1);
  form.appendChild(input);
  form.appendChild(document.createElement("br"));
}

//creating name, email , city and contact
createInput("userName", "Name :", "Enter Name");
createInput("userEmail", "Email :", "Your Email");
createInput("userContact", "Contact :", "Your Number");
createInput("userCity", "City :", "Your City");

// submit button
const submitBtn = document.createElement("button");
submitBtn.id = "submit";
submitBtn.innerText = "SUBMIT";
form.appendChild(submitBtn);

//reset button //to do remove in the function
const resetBtn = document.createElement("button");
resetBtn.id = "reset";
resetBtn.innerText = "RESET";
resetBtn.onclick = function () {
  //remove userName,userEmail,userContact & userCity
};
form.appendChild(resetBtn);

const userForm = document.getElementById("userForm");

userForm.appendChild(form);
